# vim: set ft=sh:
# shellcheck shell=sh
#
# false positive
# shellcheck disable=2154
#
# run_proc()
{
    [ "$break" = devmgr ] && { print "break before run_proc()"; sh; }
    
    command -v device-helper > /proc/sys/kernel/hotplug

    # get ready for fork bomb. kek
    find /sys/devices -name uevent |

    while read -r uevent; do
        printf add > "$uevent"
    done 2> /dev/null
}
